{
  "name": "brahma-vue",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "concurrently --names \"vite,server\" -c \"cyan,green\" \"vite\" \"npx nodemon --watch src --ext js,ts --exec node src/server.js\"",
    "build": "vite build && node esbuild.config.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dev:server": "node src/server.js",
    "start": "node bundle.main.js"
  },
  "dependencies": {
    "brahma-firelight": "^1.5.20",
    "mime-types": "^3.0.2",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.2",
    "concurrently": "^9.2.1",
    "typescript": "^5.2.2",
    "vite": "^7.2.4",
    "vue-tsc": "^1.8.27"
  }
}